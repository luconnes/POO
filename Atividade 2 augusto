{ 

	public static void main(String[] args) { 

		Scanner leitor = new Scanner(System.in); 

		System.out.println("Informe a nota da primeira prova:"); 

		float num1=leitor.nextFloat(); 
        System.out.println("Informe a nota da segunda prova:");
        float num2=leitor.nextFloat();
        System.out.println("Informe a nota da terceira prova:");
        float num3=leitor.nextFloat();
        float num4=(num1+num2+num3)/3;
		if (num3>=7){
		    System.out.println("aluno aprovado");
		    
		}  
            
        
		else{
		    System.out.println("aluno reprovado");
		    
		    
		}

		 

		

		 

	} 

} 

 
6)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite o nome da primeira pessoa: ");
        String nome1 = scanner.nextLine();

        System.out.print("Digite o nome da segunda pessoa: ");
        String nome2 = scanner.nextLine();

        if (nome1.length() > nome2.length()) {
            System.out.println(nome1 + " possui mais caracteres em seu nome.");
        } else if (nome2.length() > nome1.length()) {
            System.out.println(nome2 + " possui mais caracteres em seu nome.");
        } else {
            System.out.println("Os nomes têm o mesmo número de caracteres.");
        }

        scanner.close();
    }
}

7)
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite um caractere: ");
        char caractere = scanner.next().toLowerCase().charAt(0);

        // Verifica se o caractere é uma vogal
        if (caractere == 'a' || caractere == 'e' || caractere == 'i' || caractere == 'o' || caractere == 'u') {
            System.out.println(caractere + " é uma vogal.");
        } else if (caractere >= 'a' && caractere <= 'z') {
            System.out.println(caractere + " é uma consoante.");
        } else {
            System.out.println(caractere + " não é uma letra do alfabeto.");
        }

        scanner.close();
    }
}

