		int num1=leitor.nextInt(); 

		if (num1>0){
		    System.out.println("O valor é maior q zero");
		    
		}  
        else if(num1<0){
            System.out.println("O valor é menor q zero");
            
        }
		else{
		    System.out.println("O valor é igual a zero");
		    
		    
		}

		 

		

		 

	} 

} 

