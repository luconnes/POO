/////////ARQ 2
public class Personagem{
    String nome;
    int energia;
    int forca;



public Personagem(String nome, int energia, int forca){
    this. nome=nome;
    this. energia=energia;
    this. forca=forca;
}

public void reduzirEnergia(int forcaDeQuemAplica){
    energia-= forcaDeQuemAplica;


}
}

