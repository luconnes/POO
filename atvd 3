public class Paciente{
    String codigo;
    String nome;
    String dataDeNascimento;
    String sexo;
    String planoDeSaude;
    String alergia;
    String tipoSangíneo;
    public Paciente(String codigo, String nome, String dataDeNascimento,String sexo,String planoDeSaude, String alergia, String tipoSangíneo){
        this.codigo=codigo;
        this.nome=nome;
        this.dataDeNascimento=dataDeNascimento;
        this.sexo=sexo;
        this.planoDeSaude=planoDeSaude;
        this.alergia=alergia;
        this.tipoSangíneo=tipoSangíneo;
        
        
    }
    public void trocasPaciente(String codigo, String nome, String dataDeNascimento,String sexo,String planoDeSaude, String alergia, String tipoSangíneo){
        this.codigo=codigo;
        this.nome=nome;
        this.dataDeNascimento=dataDeNascimento;
        this.sexo=sexo;
        this.planoDeSaude=planoDeSaude;
        this.alergia=alergia;
        this.tipoSangíneo=tipoSangíneo; 
        
        
        
    }
    
    
    
    
}

