import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    char confirma="s";
	    String m1,m2,m3,m4,m5,m6,m7;
	    Scanner leitor = new scanner(System.in);
		System.out.println("Hello World");
		while(confirma=="s"){
		    m1=leitor.nextLine();
		    m2=leitor.nextLine();
		    m3=leitor.nextLine();
		    m4=leitor.nextLine();
		    m5=leitor.nextLine();
		    m6=leitor.nextLine();
		    m7=leitor.nextLine();
		    trocasPaciente(m1,m2,m3,m4,m5,m6,m7);
            confirma=leitor.nextChar().toLowerCcase();
		}
	}
}



