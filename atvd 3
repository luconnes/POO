public class App {
    public static void main(String[ ] args){
        Personagem Personagem1= new Personagem(" Ryu",100,10);
        Personagem Personagem2= new Personagem(" Bison",100,12);
        System.out.println("" + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
        Personagem1.reduzirEnergia(Personagem2.forca);
        System.out.println("Nova energia do " + Personagem1.nome + ": " + Personagem1.energia);
